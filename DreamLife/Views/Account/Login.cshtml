@model DreamLife.Models.UserViewModel

@{

    Layout = "_LayoutDefault";
}

<h1>@ViewData["Title"]</h1>
<style> 
    /* Style for form container */
    body {
        background: linear-gradient(#060231,#0dcec4);
    }
    .container1 {
        background: linear-gradient(#69ebd9, #11a6b9);
        max-width: 400px;
        border-radius: 40px;
        padding: 25px 35px;
        border: 5px solid rgb(255, 255, 255);
        box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 30px 30px -20px;
        margin: 20px auto; /* Adjusted margin for centering */
        margin-bottom: 68px;
    }

    /* Style for form heading */
    .heading {
        text-align: center;
        font-family: 'Bradley Hand', cursive;
        font-weight: 600;
        font-size: 25px;
        color: rgb(51, 30, 235);
      
    }

    /* Style for form */
    .form {
        margin-top: 20px;
    }

        /* Style for form inputs */
        .form .input {
            width: 100%;
            background: white;
            border: none;
            padding: 15px 20px;
            border-radius: 20px;
            margin-top: 15px;
            box-shadow: #cff0ff 0px 10px 10px -5px;
            border-inline: 2px solid transparent;
        }

            .form .input::-moz-placeholder {
                color: rgb(170, 170, 170);
            }

            .form .input::placeholder {
                color: rgb(170, 170, 170);
            }

            .form .input:focus {
                outline: none;
                border-inline: 2px solid #12B1D1;
            }

        /* Style for form labels */
        .form label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #333;
        }

        /* Style for form submit button */
        .form .login-button {
            display: block;
            width: 40%;
            font-weight: bold;
            background: linear-gradient(rgb(51, 30, 235),#11b3aa);
            color: white;
            padding-block: 15px;
            margin: 20px auto;
            border-radius: 20px;
            box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 20px 10px -15px;
            border: none;
            transition: all 0.2s ease-in-out;
        }

            .form .login-button:hover {
                transform: scale(1.03);
                background: linear-gradient(#11b3aa,rgb(51, 30, 235));
                box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 23px 10px -20px;
            }

            .form .login-button:active {
                transform: scale(0.95);
                box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 15px 10px -10px;
            }

    .forgot-password {
        display: block;
        margin-top: 3px;
        margin-right:20px;
        text-decoration: none;
        color:white;
        font-size:15px;
    }

    /* Style for remember password checkbox */
    .form-check {
        margin-top: 15px;
    }

    .form-check-label {
        font-weight: normal;
        color: #333;
    }

    .log-image{
        margin-top:20px;
       border-radius:5px;
    }
    </style>
<div class="row">

    <div class="col-md-6">
        <div class="text-center" style="color:white">
            <span>Are you New? Register <a asp-area="" asp-controller="Account" asp-action="Register">Here</a></span>
        </div>
        <div class="container1">

            <form method="post" class="form">
                <h3 class="heading">Login</h3>
                @if (ViewBag.IsFailed != null && ViewBag.IsFailed == true)
                {
                    <div><strong>Sorry! </strong>Invalid Username or password...</div>
                }
                @* <div asp-validation-summary="All" class="text-danger"></div> *@
                <div>
                    <input asp-for="Name" class="input" placeholder="User Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div>
                    <input asp-for="Password" type="password" class="input" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">Remember Password</label>
                </div>
                <button type="submit" class="login-button">Login</button>
                <a href="#" class="forgot-password">Forgot Password?</a>
            </form>
        </div>
    </div>
    <div class="col-md-6 log-image">
        <img src="~/images/vim1.jpeg" width="500px" height="400px" />
    </div>
</div>

