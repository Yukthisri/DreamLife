@model DreamLife.Models.RegistrationViewModel

@{
    Layout = "_LayoutDefault";
}

<h1>@ViewData["Title"]</h1>

<style>
    body {
        background: linear-gradient(#060231,#0dcec4);
    }
    /* Provided styles */
    .container1 {
        background: linear-gradient(#69ebd9, #11a6b9);
        max-width: 500px;
        border-radius: 40px;
        padding: 25px 35px;
        border: 5px solid rgb(255, 255, 255);
        box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 30px 30px -20px;
        margin: 20px auto; /* Adjusted margin for centering */
        margin-bottom: 68px;
    }

    /* Style for form heading */
    .heading {
        text-align: center;
        font-family: 'Bradley Hand', cursive;
        font-weight: 900;
        font-size: 25px;
        color: rgb(51, 30, 235);
        margin-top: -20px;
        margin-bottom: 25px;
    }

    .form {
        margin-top: 20px;
    }

        .form .input {
            width: 100%;
            background: white;
            border: none;
            padding: 15px 20px;
            border-radius: 20px;
            /* margin-top: 15px; */
            margin-bottom:10px;
            box-shadow: #cff0ff 0px 10px 10px -5px;
            border-inline: 2px solid transparent;
        }

            .form .input::-moz-placeholder {
                color: rgb(170, 170, 170);
            }

            .form .input::placeholder {
                color: rgb(170, 170, 170);
            }

            .form .input:focus {
                outline: none;
                border-inline: 2px solid #12B1D1;
            }
        /* Style for form labels */
        .form label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #333;
        }
     
        .form .login-button {
            display: block;
            width: 50%;
            font-weight: bold;
            background: linear-gradient(rgb(51, 30, 235),#11b3aa);
            color: white;
            padding-block: 15px;
            margin: 20px auto;
            border-radius: 20px;
            box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 20px 10px -15px;
            border: none;
            transition: all 0.2s ease-in-out;
        }

            .form .login-button:hover {
                transform: scale(1.03);
                background: linear-gradient(#11b3aa,rgb(51, 30, 235));
                box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 23px 10px -20px;  
            }

            .form .login-button:active {
                transform: scale(0.95);
                box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 15px 10px -10px;
            }
</style>

<div class="row">

    <div class="col-md-6">
        <div class="text-center" style="color:white">
            <span>Already have an account? Click <a asp-area="" asp-controller="Account" asp-action="Login">Here</a></span>
        </div>
        <div class="container1">
            <form method="post" class="form">
                <h3 class="heading">Register</h3>
                @if (ViewBag.IsSuccess != null && ViewBag.IsSuccess == true)
                {
                    <div><strong>Congratulations! </strong>Successfully registered...</div>
                }
                <div style="display: flex; justify-content: space-between;">
                    <div style="width: 48%;">
                        <label asp-for="FirstName" placeholder="Name">First Name:</label>
                        <input asp-for="FirstName" class="input" />
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <div style="width: 48%;">
                        <label asp-for="LastName">Last Name:</label>
                        <input asp-for="LastName" class="input" />
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>
                <div style="display: flex; justify-content: space-between;">
                    <div style="width: 48%;">
                        <label asp-for="Gender">Gender:</label>
                        <input asp-for="Gender" class="input" />
                        <span asp-validation-for="Gender"></span>
                    </div>
                    <div style="width: 48%;">
                        <label asp-for="DateofBirth">Date of Birth:</label>
                        <input asp-for="DateofBirth" class="input" />
                        <span asp-validation-for="DateofBirth"></span>
                    </div>
                </div>
                <div style="display: flex; justify-content: space-between;">
                    <div style="width: 48%;">
                        <label asp-for="Email">Email:</label>
                        <input asp-for="Email" class="input" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div style="width: 48%;">
                        <label asp-for="Phone">Phone:</label>
                        <input asp-for="Phone" class="input" />
                        <span asp-validation-for="Phone"></span>
                    </div>
                </div>
                <div style="display: flex; justify-content: space-between;">
                    <div style="width: 48%;">
                        <label asp-for="City">City:</label>
                        <input asp-for="City" class="input" />
                        <span asp-validation-for="City"></span>
                    </div>
                    <div style="width: 48%;">
                        <label asp-for="Country">Country:</label>
                        <input asp-for="Country" class="input" />
                        <span asp-validation-for="Country"></span>
                    </div>
                </div>                
                <button type="submit" class="login-button">Register</button>
            </form>
        </div>
    </div>
    <div class="col-md-6">
        <img src="~/images/vim4.jpeg" width="500px" height="400px" />
    </div>
</div>