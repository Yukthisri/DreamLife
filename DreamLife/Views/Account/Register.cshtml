@model DreamLife.Models.RegistrationViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutDefault";
}

<style>
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%; /* Set height to cover the entire viewport */
        z-index: -1;
    }

        .background-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    body {
        background: linear-gradient(#060231,#0dcec4);
    }
    /* Provided styles */
    .container1 {
        background: linear-gradient(#8bc34a, #11a6b9);
        max-width: 500px;
        border-radius: 40px;
        padding: 25px 35px;
        border: 5px solid rgb(255, 255, 255);
        box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 30px 30px -20px;
        margin: 20px auto; /* Adjusted margin for centering */
        margin-bottom: 68px;
    }

    /* Style for form heading */
    .heading {
        text-align: center;
        font-family: 'Bradley Hand', cursive;
        font-weight: 900;
        font-size: 25px;
        color: rgb(227 69 69 / 99%);
        margin-top: -20px;
        margin-bottom: 25px;
    }

    .form {
        margin-top: 20px;
    }

        .form .input {
            width: 100%;
            background: white;
            border: none;
            padding: 15px 20px;
            border-radius: 20px;
            /* margin-top: 15px; */
            margin-bottom:10px;
            box-shadow: #cff0ff 0px 10px 10px -5px;
            border-inline: 2px solid transparent;
        }

            .form .input::-moz-placeholder {
                color: rgb(170, 170, 170);
            }

            .form .input::placeholder {
                color: rgb(170, 170, 170);
            }

            .form .input:focus {
                outline: none;
                border-inline: 2px solid #12B1D1;
            }
        /* Style for form labels */
        .form label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #333;
        }
     
        .form .login-button {
            display: block;
            width: 50%;
            font-weight: bold;
            background: linear-gradient(rgb(51, 30, 235),#11b3aa);
            color: white;
            padding-block: 15px;
            margin: 20px auto;
            border-radius: 20px;
            box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 20px 10px -15px;
            border: none;
            transition: all 0.2s ease-in-out;
        }

            .form .login-button:hover {
                transform: scale(1.03);
                background: linear-gradient(#11b3aa,rgb(51, 30, 235));
                box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 23px 10px -20px;  
            }

            .form .login-button:active {
                transform: scale(0.95);
                box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 15px 10px -10px;
            }

    .form-select {
        line-height: 2.5;
        border-radius: 1.25rem;
    }
</style>

<div class="background-image">
    <img src="~/images/DreamLife/11.jpg" alt="Background Image">
</div>
<div class="row">

    <div class="col-md-6">
        <div class="text-center" style="color:white">
            <span>Already have an account? Click <a asp-area="" asp-controller="Account" asp-action="Login">Here</a></span>
        </div>
        <div class="container1">
            <form method="post" class="form">
                <h3 class="heading">Register</h3>
                @if (ViewBag.IsSuccess != null && ViewBag.IsSuccess == true)
                {
                    <div><strong>Congratulations! </strong>Successfully registered...</div>
                }
                <div style="display: flex; justify-content: space-between;">
                    <div style="width: 48%;">
                        <label asp-for="FullName" placeholder="Name">First Name:</label>
                        <input asp-for="FullName" class="input" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div style="width: 48%;">
                        <label asp-for="ReferalCode" placeholder="Referal Code">Referal Code:</label>
                        <input asp-for="ReferalCode" class="input" readonly />
                        <span asp-validation-for="ReferalCode"></span>
                    </div>
                </div>
                <div style="display: flex; justify-content: space-between;">
                    <div style="width: 48%;">
                        <label asp-for="Gender" class="input-label">Gender:</label>
                        <select asp-for="Gender" class="form-select">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div style="width: 48%;">
                        <label asp-for="DateofBirth">Date of Birth:</label>
                        <input asp-for="DateofBirth" type="date" class="input" />
                        <span asp-validation-for="DateofBirth" class="text-danger"></span>
                    </div>
                </div>
                <div style="display: flex; justify-content: space-between;">
                    <div style="width: 48%;">
                        <label asp-for="Email">Email:</label>
                        <input asp-for="Email" class="input" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div style="width: 48%;">
                        <label asp-for="Phone">Phone:</label>
                        <input asp-for="Phone" class="input" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div style="display: flex; justify-content: space-between;">
                    <div style="width: 48%;">
                        <label asp-for="City">City:</label>
                        <input asp-for="City" class="input" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div style="width: 48%;">
                        <label asp-for="Country">Country:</label>
                        <input asp-for="Country" class="input" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>                
                <button type="submit" class="login-button">Register</button>
            </form>
        </div>
    </div>
    <div class="col-md-6">
    </div>
</div>