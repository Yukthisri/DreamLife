@{
    ViewData["Title"] = "Home";
    Layout = "_LayoutDefault";
}
<link href="~/css/Home.css" rel="stylesheet" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
    .container-box {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        margin: 30px;
    }

    .arrow {
        position: relative;
        background: #ec4122;
        width: 200px;
        height: 46px; 
        margin: 30px;
        color: white;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        line-height: 44px;
    }

        .arrow::before,
        .arrow::after {
            content: '';
            position: absolute;
            width: 0;
            height: 0;
            border-style: solid;
        }

        .arrow::before {
            top: 50%;
            left: 100%;
            border-color: transparent transparent transparent #ec4122;
            border-width: 30px 0 30px 30px; /* Adjust the arrowhead size */
            transform: translateY(-50%);
        }

        .arrow::after {
            display: none; 
        }

        .arrow:nth-child(1) {
            background: #ec4122e3;
        }

            .arrow:nth-child(1)::before {
                border-left-color: #ec4122e3;
            }

        .arrow:nth-child(2) {
            background: #ec4122d4;
        }

            .arrow:nth-child(2)::before {
                border-left-color: #ec4122d4;
            }

        .arrow:nth-child(3) {
            background: #ec4122b8;
        }

            .arrow:nth-child(3)::before {
                border-left-color: #ec4122b8;
            }

    
</style>
