<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DreamLife</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DreamLife.styles.css" asp-append-version="true" />
    <style>
        a {
            font-weight: bold;
            font-size: large;
        }

            a:hover {
                font-weight: 500;
            }

        p {
            font-weight: 500;
        }

        .navbar-brand img {
            max-height: 50px; /* Adjust height as needed */
            max-width: 150px; /* Adjust width as needed */
        }

        .NotificationPanel {
            background-color: black;
            color: white;
            text-align: center;
            display: block;
            z-index:0;
        }

        .slide {
            display: none;
            padding: 6px 20px;
            font-style: italic;
            font-weight: bold;
        }

        .active {
            display: block;
        }
    </style>
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white" style="background: linear-gradient(#060231,#0dcec4);">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" asp-area="" asp-controller="" asp-action="">
                    <img src="~/images/dreamlifelogo.png" />
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item dropdown text-dark">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="true">Buy</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="background: #0dcec4;width: fit-content;">
                                <li><a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Package</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Package History</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Help</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-button text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="NotificationPanel sticky-top">
        <div>
        <div class="slide" id="slide1">
            Hurry Up! What are you waiting for
        </div>
        <div class="slide" id="slide2">
            Many exiting opportunities for you
        </div>
        <div class="slide" id="slide3">
            Wanna try ?
        </div>
        </div>
    </div>
    <br />
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - DreamLife - Private
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Start with the first slide
            var currentSlide = 1;

            // Show the first slide
            $("#slide1").addClass("active");

            // Move to the next slide every 3 seconds
            setInterval(function () {
                // Hide current slide
                $("#slide" + currentSlide).removeClass("active");

                // Move to the next slide
                currentSlide++;
                if (currentSlide > 3) {
                    currentSlide = 1; // Loop back to the first slide
                }

                // Show the next slide
                $("#slide" + currentSlide).addClass("active");
            }, 3000);
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
