@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DreamLife</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DreamLife.styles.css" asp-append-version="true" />
    <style>
        a {
            font-weight: bold;
            font-size: large;
        }

            a:hover {
                font-weight: 500;
            }

        p {
            font-weight: 500;
        }

        .navbar-brand img {
            max-height: 50px; /* Adjust height as needed */
            max-width: 150px; /* Adjust width as needed */
        }

        .NotificationPanel {
            background-color: black;
            color: white;
            text-align: center;
            display: block;
            z-index: 0;
        }

        .slide {
            display: none;
            padding: 6px 20px;
            font-style: italic;
            font-weight: bold;
        }

        .active {
            display: block;
        }

        .navbar-profile img {
            height: 40px;
            width: 40px;
            border-radius: 10px;
            margin-bottom: -14px;
        }
        .round{
            height:50px;
            width:50px;
            border-radius: 50px; 
        }

        .dropdown-item:hover{
            background: #94d353;
        }

        .dropdown-menu{
            background: #94d353;
        }
        .text-dark {
            color: rgb(255 255 255) !important;
        }
        .nav-link{
            color: rgb(255 255 255) !important;
        }

        .nav-link:hover {
                color: #94d353;
        }

        .register-login-buttons {
            position: fixed;
            right: 10px;
            top:0px;
            z-index: 1000;
        }
    </style>
</head>
<body>    
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background: linear-gradient(#016d3a,#94d353);">
            <div class="container-fluid justify-content-start">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="Dashboard">
                    <img src="~/images/dreamlifelogo.png" />
                </a>                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item dropdown text-dark">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="true">Buy</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="background: white;width: fit-content;">
                                <li><a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Package">Package</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="User" asp-action="PackageHistory">Package History</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Member">Add Member</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Network">Network</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Holidays">HoliDays</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Help</a>
                        </li>
                    </ul>                    
                </div>

                <div class="register-login-buttons">
                <ul class="nav align-items-center">
                    <span class="text-dark"><strong>@Accessor.HttpContext.Session.GetString("LOGINID")</strong></span>
                    <li class="nav-item dropdown dropdown-user">
                        <a class="nav-link dropdown-toggle dropdown-user-link" id="dropdown-user" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @if (Accessor.HttpContext.Session.GetString("Gender") == "Male")
                            {
                                <img class="round" src="~/images/male-avatar.jpg" alt="avatar" />
                            }
                            else
                            {
                                <img class="round" src="~/images/female-avatar.jpg" alt="avatar" />
                            }
    
                        </a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdown-user" style="background: white;">
                            <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Profile"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user me-50"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg> Profile</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-power me-50"><path d="M18.36 6.64a9 9 0 1 1-12.73 0"></path><line x1="12" y1="2" x2="12" y2="12"></line></svg> Logout</a>
                        </div>
                    </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="NotificationPanel sticky-top">
        <div>
            <div class="slide" id="slide1">
                Hurry Up! What are you waiting for
            </div>
            <div class="slide" id="slide2">
                Many exiting opportunities for you
            </div>
            <div class="slide" id="slide3">
                Wanna try ?
            </div>
        </div>
    </div>
    <br />
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - DreamLife - Private
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Start with the first slide
            var currentSlide = 1;

            // Show the first slide
            $("#slide1").addClass("active");

            // Move to the next slide every 3 seconds
            setInterval(function () {
                // Hide current slide
                $("#slide" + currentSlide).removeClass("active");

                // Move to the next slide
                currentSlide++;
                if (currentSlide > 3) {
                    currentSlide = 1; // Loop back to the first slide
                }

                // Show the next slide
                $("#slide" + currentSlide).addClass("active");
            }, 3000);
        });

    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
