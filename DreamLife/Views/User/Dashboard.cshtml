@model DreamLife.Models.Entities.UserDashboard
@{
    ViewData["Title"] = "Dashboard";
}
<link href="~/css/ZoomInOut.css" rel="stylesheet" />
<style>
    .popup {
        background: linear-gradient(#69ebd9, #11a6b9);
        border-radius: 20px;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        z-index: 9981;
        display: none;
        margin-top: -155px;
        margin-left: -185px;
    }

        .popup:hover{
            margin-top: -10px;
            margin-left: -10px;
        }
    .pop {
        width: 300px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;

    }

    #btn {
        transition: all 0.3s ease-in-out;
        font-family: "Dosis", sans-serif;
    }

    #btn {
        background-image: linear-gradient(135deg, #feb692 0%, #ea5455 100%);
        box-shadow: 0 20px 30px -6px rgba(238, 103, 97, 0.5);
        outline: none;
        cursor: pointer;
        border: none;
        font-size: 18px;
        color: white;
        float:right;
    }

        #btn:hover {
            transform: translateY(3px);
            box-shadow: none;
        }

        #btn:active {
            opacity: 0.5;
        }

    #welcome-message {
        font-size: 32px;
        margin-bottom: 20px; 
    }

    .col-8{
        margin-left: 100px;
        margin-bottom: 20px;
    }
    .zoomInOut {
    animation: zoomInOut 2s infinite alternate;
}
         @{
        string zoomInKeyframes = @"
            @keyframes zoomIn {
                from {
                    transform: scale(1);
                }
                to {
                    transform: scale(1.1);
                }
            }
        ";
    }
@Html.Raw(zoomInKeyframes)
</style>

