@model DreamLife.Models.Transaction

<style>
    table {
        font-family: Arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        border-width:0;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }

    tr {
        border-radius:10px;
    }

    tr:hover {
        background-color: #ddd;
    }
</style>
<div>
    <h3>Buy Package</h3>
    <div style="display: flex; justify-content: space-between;">
        <div style="width: 48%;">
            <label asp-for="Amount" placeholder="Name">Amount:</label>
            <input asp-for="Amount" class="input" />
            <span asp-validation-for="Amount"></span>
        </div>
        <button type="submit" class="login-button">Buy</button>
    </div>
</div>
