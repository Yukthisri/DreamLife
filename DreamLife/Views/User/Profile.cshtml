@model DreamLife.Models.User

<style>
    table {
        font-family: Arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        border-width:0;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }

    tr {
        border-radius:10px;
    }

    tr:hover {
        background-color: #ddd;
    }
</style>
<div>
    <h3 class="text-center" style="background-color: #13c1ad;">Account Details</h3>
    <table>
        <tr>
            <th style="width:35%">FirstName</th>
            <th>@Model.FirstName</th>
        </tr>
            <td>LastName</td>
            <td>@Model.LastName</td>
        </tr>
            <th>Gender</th>
            <th>@Model.Gender</th>
        </tr>
            <td>DateOfBirth</td>
            <td>@Model.DateOfBirth</td>
        </tr>
            <th>Email</th>
            <th>@Model.Email</th>
        </tr>
            <td>Country</td>
            <td>@Model.Country</td>
        </tr>
            <th>Phone</th>
            <th>@Model.Phone</th>
        </tr>
            <td>City</td>
            <td>@Model.City</td>
        </tr>
    </table>
</div>
